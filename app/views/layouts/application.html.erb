<!doctype html>
<html lang="en" class="h-100">
  <head>
    <title>ARGUIT</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="canonical" href="https://v5.getbootstrap.com/docs/5.0/examples/cover/">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>








    <!-- Bootstrap core CSS -->


    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>


    <!-- Custom styles for this template -->

  </head>
  <body class="d-flex text-center text-white bg-dark">

<div class="cover-container w-100 d-flex p-3 mx-auto flex-column">
  <header class="mb-auto w-100 shadow">
    <div>
      <h3 class = 'float-md-left mb-0' > <%=link_to 'ARGUIT', home_page_index_path, class: "text-white text-decoration-none"%></h3>
      <nav class="nav nav-masthead justify-content-center float-md-left ">
        <%if !current_user.nil?%>
        <%=link_to current_user.username, user_path(current_user), class:"nav-link ml-3"%>
        <%=link_to "Sign Out", destroy_user_session_path, method: "delete", class:"nav-link"%>
        <%else%>
        <%=link_to "Login", new_user_session_path, class:"nav-link ml-3"%>
        <%end%>
        </nav>
      <nav class="nav nav-masthead justify-content-center float-md-right">
        <%=link_to 'New Topic', new_pending_topic_path, class:"nav-link" %>
        <%=link_to 'Browse Topics',categories_path, class:"nav-link" %>
        <%=link_to "Browse Judgments", judging_topics_path, class: 'nav-link'%>




      </nav>
    </div>
  </header>

  <div class = "main container ">
    <p id="notice"><%= notice %></p>
    <%=yield%>
  </div>

  <footer class="mt-auto text-white-50">
    <p></p>
  </footer>
</div>



  </body>
</html>
