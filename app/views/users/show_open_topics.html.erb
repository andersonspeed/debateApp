<%= stylesheet_link_tag 'user_profile', media: 'all', 'data-turbolinks-track': 'reload' %>
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2"><%= @user.username %>  <br> <p class = 'h6'>Arguit Record: <%=@user.winner_topics.count%> - <%=@user.winner_topics.count%><p></h1>
            <div class="btn-toolbar mb-2 mb-md-0">

                <%=link_to 'My Active Topics', user_path(current_user.id), class: "btn btn-sm btn-primary mr-2"%>
                <%=link_to 'My Open Topics', show_open_topics_path(current_user.id), class:"btn btn-sm btn-primary mr-2"%>
                <%=link_to 'My Completed Topics', show_completed_topics_path(current_user.id), class:"btn btn-sm btn-primary mr-2" %>
                <%=link_to 'My Judgments', show_judgments_path(current_user.id), class:"btn btn-primary btn-sm mr-2" %>
              </div>
            </div>

            <div id ='content'>

              </div>




            <div class = 'row justify-content-center'>
            <h4>My Open Topics</h4>
            <table class="table table-responsive table-dark" style = 'width: 70%'>
            <thead>
              <tr>
                <th scope = 'col'>Title</th>
                <th scope = 'col'>Position</th>
                <th scope = 'col'>Replies</th>
                <th scope = 'col'>Wager</th>
                <th scope = 'col'>Owner</th>
                <th scope = 'col', colspan = '3'>Action</th>
              </tr>
            </thead>

            <tbody>
              <% for topic in @user.topics do%>
              <% if topic.open%>
              <%=render topic%>
              <% end %>
              <% end %>

            </tbody>
            </table>
            </div>
            <%=link_to "Browse All Open Topics", topics_path, class: 'btn btn-primary'%>
