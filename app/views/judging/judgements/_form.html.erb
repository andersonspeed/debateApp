<%= form_with(model:  [:judging, @topic, @topic.judgements.build], local: true) do |form| %>
<div class = 'row justify-content-center'>
<table style = 'width: 28%'>
  <thead>
    <tr>
      <th><u>Choose winner:</u></th>
    </tr>
  </thead>
  <tbody>
      <tr class =>
        <td class = 'text-left pl-5'>
          <%= form.radio_button :winner_selection, 'creator', class: 'ml-5'%>
          <%= form.label @topic.owner.username %>
          <br>

            <%= form.radio_button :winner_selection, 'challenger', class: 'ml-5' %>
            <%= form.label @topic.challenger.username%>
            </td>
      </tr>
    </tbody>
  </table>
  </div>

  <div class="container" style= "width: 50%">
    <%= form.text_area :opinion, class: 'form-control', placeholder: 'Type Opinion Here', rows: '3' %>
  </div>


  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
  <br>
<% end %>
